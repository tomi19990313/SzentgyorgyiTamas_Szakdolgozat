<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF808080"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF808080"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Képesség vizsgálat"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@+id/titleTextView"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/icon" />

        <EditText
            android:id="@+id/teacherNameEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:hint="Tanár neve"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/childNameEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/teacherNameEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:hint="Gyermek neve"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/childIDEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/childNameEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:hint="Gyermek azonosítója"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/childIDEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:text="Lekérdezés"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>
